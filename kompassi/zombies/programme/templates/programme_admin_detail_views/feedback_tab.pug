- load crispy from crispy_forms_tags
- load i18n
.tab-pane#programme-admin-programme-feedback-tab
  .panel.panel-default
    .panel-heading: strong {% trans "Programme feedback" %}
    if feedback.exists
      include programme_feedback_table
    .panel-footer.clearfix
      .btn-group.pull-right
        if programme.is_open_for_feedback
          a.btn.btn-success(href='{% url "programme:feedback_view" event.slug programme.id %}', target='_blank')
            {% trans "Give feedback" %}
      if feedback.exists
        .text-muted {% blocktrans count num_feedback_messages=feedback.count %}One feedback message.{% plural %}{{ num_feedback_messages }} feedback messages.{% endblocktrans %}
      else
        .text-muted {% trans "No feedback." %}
